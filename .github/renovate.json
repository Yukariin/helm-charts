{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "replacements:k8s-registry-move",
    ":semanticCommitTypeAll(chore)"
  ],
  "postUpdateOptions": [
    "helmUpdateSubChartArchives"
  ],
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "rebaseWhen": "conflicted",
  "customManagers": [
    {
      "description": ["Process Helm charts"],
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)Chart\\.ya?ml$/"],
      "matchStrings": [
        "#\\s*renovate:\\s*image=(?<depName>.*?)\\n\\s*appVersion:\\s*\"?(?<currentValue>[\\w.-]+)\"?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": "Handle LSIO version tags",
      "matchDatasources": ["docker"],
      "matchPackagePatterns": ["^linuxserver/"],
      "extractVersion": "^(?<version>\\d+\\.\\d+\\.\\d+\\.\\d+-ls\\d+)$",
      "versioning": "loose"
    },
    {
      "description": "Handle YYYY-MM-DD version tags",
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "diygod/rsshub"
      ],
      "versioning": "regex:^v?(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})$"
    }
  ]
}
